---
import BaseLayout from "../../layouts/BaseLayout.astro"
import SkateSpot from "../../components/SkateSpot.astro"
const spots = Astro.fetchContent("./**/*.md")
---

<BaseLayout title="Berlin | Skating Places">
  <div class="container">
    {spots.map((spot) => <SkateSpot spot={spot} />)}
  </div>
</BaseLayout>

<style lang="scss">
  .container {
    flex-direction: column;
  }
</style>
